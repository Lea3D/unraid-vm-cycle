function getIcon($res, $uuid) {
  global $lv;
  $icon = $lv->domain_get_icon_url($res);
  if (!$icon || !file_exists("/usr/local/emhttp/" . ltrim($icon, '/'))) {
    $icon = "/plugins/dynamix.vm.manager/templates/images/question.png";
  }
  return $icon;
}

function getGpuPciTree($config) {
  global $gpuList;
  $tree = [];
  if (!empty($config['gpu'])) {
    foreach ($config['gpu'] as $gpu) {
      foreach ($gpuList as $known) {
        if ($gpu['id'] == $known['id']) {
          $tree[] = $known['name'] . "<br>&emsp;" . $gpu['id'];
        }
      }
    }
  }
  return implode("<br>", $tree);
}

function getAllPciTree($config) {
  global $gpuList;
  $gpu_ids = array_column($gpuList, 'id');
  $tree = [];
  $all_pci_ids = [];
  if (!empty($config['gpu'])) {
    foreach ($config['gpu'] as $gpu) {
      $all_pci_ids[] = $gpu['id'];
    }
  }
  if (!empty($config['pci'])) {
    foreach ($config['pci'] as $pci) {
      $all_pci_ids[] = $pci['id'];
    }
  }
  foreach (array_unique($all_pci_ids) as $pciid) {
    $name = trim(shell_exec("lspci -s " . escapeshellarg($pciid) . " | cut -d' ' -f5-")." ");
    $tree[] = ($name ? htmlspecialchars($name) . "<br>&emsp;" : '') . $pciid;
  }
  return implode("<br>", $tree);
}

function getUsbNames($config) {
  $usbNames = [];
  if (!empty($config['usb'])) {
    foreach ($config['usb'] as $usb) {
      $name = $usb['name'] ?? '';
      $vendor = $usb['vendor'] ?? '';
      $product = $usb['product'] ?? '';
      if ($name) {
        $usbNames[] = $name;
      } elseif ($vendor && $product) {
        $id = strtolower(sprintf("%04x:%04x", hexdec($vendor), hexdec($product)));
        $label = trim(shell_exec("lsusb | grep $id | cut -d' ' -f7-"));
        $usbNames[] = $label ?: "$vendor:$product";
      } elseif (!empty($usb['id'])) {
        $usbNames[] = $usb['id'];
      }
    }
  }
  return implode("<br>", $usbNames);
}
